<h1>Course Details</h1>

<p>
  <strong>Name:</strong>
  <%= @course.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @course.description %>
</p>

<h2>Tutors</h2>

<% if @course.tutors.any? %>
  <ul>
    <% @course.tutors.each do |tutor| %>
      <li>
        <strong>Name:</strong>
        <%= tutor.name %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No tutors assigned to this course.</p>
<% end %>

<%= link_to 'Edit Course', edit_course_path(@course) %> |
<%= link_to 'Back to Courses', courses_path %>
